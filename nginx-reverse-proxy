server {
	listen      [::]:80;
	listen      80;

	server_name static.yourhost;

	real_ip_header    X-Real-IP;
	real_ip_recursive on;
	client_max_body_size 50M;

	location / {
		proxy_pass  http://127.0.0.1:2337;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
        proxy_set_header Host static.docker.nerdz.eu;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_set_header X-Forwarded-For $remote_addr;
		proxy_set_header X-Forwarded-Port $server_port;
		proxy_set_header X-Request-Start $msec;
	}
}


server {
        listen      [::]:443;
        listen      443;

        server_name camo.yourhost;

        ssl on;
        ssl_certificate /etc/nginx/ssl/nerdz.crt;
        ssl_certificate_key /etc/nginx/ssl/nerdz.key;

        real_ip_header    X-Real-IP;
        real_ip_recursive on;
        client_max_body_size 50M;

        location / {
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains";
                proxy_pass  https://127.0.0.1:8081;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "upgrade";
                proxy_set_header Host camo.asagi.alfa.moe;
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_set_header X-Forwarded-For $remote_addr;
                proxy_set_header X-Forwarded-Port $server_port;
                proxy_set_header X-Request-Start $msec;
        }
}

